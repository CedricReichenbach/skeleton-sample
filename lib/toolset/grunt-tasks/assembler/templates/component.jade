extends /layout/layout

block htmlhead
    title Styleguide â€” #{component.name} component
    meta(name='description', content='')
    link(rel='stylesheet', href='#{relativePath}/css/styleguide.css')

mixin component-section(name)
  .component-section
    h2.component-section-title #{name}
    .component-section-container
      block

block htmlbody
    .l-site-width
      a(href="../") < Back to Component List
      h1 #{component.name}
      p
        strong description:
        | #{component.description}
      p
        strong version:
        | #{component.version}
      p
        strong author:
        | #{component.author}

      +component-section("How to use it")
          pre +#{component.name}(data, options)

      +component-section("Data")
        ul.reset-list.component-option-list
          - for(var argumentName in component.arguments)
            li
              - var value = component.arguments[argumentName]
                h3.component-option-title #{argumentName}:
                span.component-option-value #{value}

      +component-section("Options")
        ul.reset-list.component-option-list
          - for(var key in component.options)
            li.l-grid
              - var option = component.options[key]
                .component-info-section.l-grid-cell.l-one-half
                  h3.component-option-title #{key}
                  span.component-option-value (#{option.type || "string"})
                .component-option-fields.l-grid-cell.l-one-half
                  - for (var index in option.values)
                    - var value = option.values[index]
                    input.js-option-value(type="radio", name="#{key}", value="#{value}", checked=index==0)
                    label(for="#{key}") #{value}
      +component-section("Combinations")
        .component-combinations.l-grid
          each combination, index in component.combinations
            - var klass = index === 0 ? 'is-active' : ''
            iframe.component-combination-iframe.l-grid-cell.l-one-whole(
              src="#{component.name}/c#{index}.html",
              class="component-combination-iframe-#{index} #{klass}",
              frameBorder="0",
              data-options="#{JSON.stringify(combination)}"
            )
