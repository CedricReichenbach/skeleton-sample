mixin button (arguments)
  - var text      = arguments ? arguments.text || "" : ""
  - var uiClasses = arguments ? arguments.uiClasses || "" : ""
  - var options   = arguments ? arguments.options || {} : {}

  - var classes = "button " + uiClasses
  - for val, key in components.baseButton.options
    - classes = classes + " button--" + (options[key] || components.baseButton.options[key].default)

  a(class=classes) #{text}

